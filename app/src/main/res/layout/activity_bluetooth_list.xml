<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_bluetooth_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="switch off" />

    <TextView
        android:id="@+id/tv_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/btn_bluetooth_switch"
        android:layout_alignTop="@id/btn_bluetooth_switch"
        android:layout_toRightOf="@id/btn_bluetooth_switch"
        android:gravity="center"
        android:padding="10dp"
        android:text="search bluetooth" />

    <ListView
        android:id="@+id/lv_bluetooth_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btn_bluetooth_switch"></ListView>

</RelativeLayout>